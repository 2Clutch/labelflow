{
    "git": {
        "changelog": "yarn auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs",
        "commitMessage": "Release ${version}\n\n${changelog}",
        "tagAnnotation": "Release ${version}\n\n${changelog}"
    },
    "npm": {
        "publish": false
    },
    "hooks": {
        "after:bump": "yarn update:changelog; yarn update:license; git add CHANGELOG.md LICENSE;"
    },
    "github": {
        "release": true
    }
}